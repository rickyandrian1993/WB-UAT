{
  "name": "weigh-bridge",
  "author": "Wide Agri",
  "title": "Weigh Bridge System - UAT",
  "version": "1.1.7",
  "server_url": "https://wide-wb.incasi.co.id:6121",
  "description": "Weigh Bridge an Electron application with React and Node",
  "main": "./main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "server": "cd server && nodemon index",
    "react-build": "react-app-rewired build",
    "react-start": "cross-env BROWSER=none react-app-rewired start",
    "electron-dev": "node scripts/dev.js scripts/start.js",
    "electron-pack": "electron-builder -c.extraMetadata.main='./main.js'",
    "bp": "concurrently \"npm run server\" \"npm run react-build && npm run electron-dev\"",
    "deploy": "npm run react-build && electron-builder -c.extraMetadata.main='./main.js' build --win --publish always"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.4",
    "concurrently": "^4.1.0",
    "cross-env": "^7.0.3",
    "customize-cra": "^0.2.12",
    "electron": "^5.0.2",
    "electron-builder": "^20.41.0",
    "react": "^18.2.0",
    "react-app-rewired": "^2.1.3",
    "react-dom": "^18.2.0",
    "react-scripts": "3.0.1",
    "wait-on": "^3.2.0"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@mantine/core": "^5.8.2",
    "@mantine/dates": "^5.8.2",
    "@mantine/form": "^5.8.2",
    "@mantine/hooks": "^5.8.2",
    "@mantine/modals": "^5.8.2",
    "@mantine/notifications": "^5.8.2",
    "app-module-path": "^2.2.0",
    "axios": "^1.2.1",
    "dayjs": "^1.11.7",
    "dom-to-pdf": "^0.3.2",
    "electron-is-dev": "^1.1.0",
    "electron-updater": "^5.0.5",
    "express": "^4.17.1",
    "moment": "^2.29.4",
    "nodemon": "^1.19.1",
    "piping": "^1.0.0-rc.4",
    "prop-types": "^15.8.1",
    "react-csv": "^2.2.2",
    "react-data-table-component": "^7.5.3",
    "react-router-dom": "^6.4.5",
    "react-to-pdf": "^1.0.1",
    "remixicon": "^2.5.0",
    "styled-components": "^5.3.6"
  },
  "build": {
    "generateUpdatesFilesForAllChannels": true,
    "appId": "wb.rickyandrian1993",
    "productName": "Weigh Bridge System",
    "copyright": "Ricky Andrian",
    "win": {
      "publish": {
        "provider": "github",
        "owner": "rickyandrian1993",
        "repo": "WB-UAT",
        "private": true
      },
      "icon": "public/wb.ico"
    },
    "files": [
      "build/**/**/*",
      "build-server/**/**/*",
      "node_modules/**/**/*",
      "./main.js"
    ],
    "publish": {
      "provider": "github",
      "owner": "rickyandrian1993"
    }
  },
  "browserslist": []
}
